{
  "name": "@octomind/debugtopus",
  "version": "3.1.1",
  "description": "Thin wrapper around playwright and the octomind api to run your automagically-maintained tests locally",
  "main": "./dist/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "commonjs",
  "files": [
    "dist",
    "src",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "lint": "eslint src/**/*.ts --max-warnings=0",
    "build": "tsc --project tsconfig.build.json",
    "start": "npx tsx src/index.ts",
    "test": "jest --ci && pnpm test:playwright && pnpm test:cli",
    "test:playwright": "npx playwright test",
    "test:cli": "pnpm build && pnpm link . && debugtopus -h",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OctoMind-dev/debugtopus.git"
  },
  "author": "OctoMind-dev",
  "license": "MIT",
  "bin": {
    "debugtopus": "./dist/index.js"
  },
  "dependencies": {
    "@playwright/test": "1.42.0",
    "axios": "^1.4.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^20.1.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.4.7",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.4"
  }
}
